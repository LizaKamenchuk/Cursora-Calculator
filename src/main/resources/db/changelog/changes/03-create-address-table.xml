<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="3" author="liquibase">
        <createTable tableName="addresses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="suite" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="zipcode" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="geo_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_address_geo" references="geo(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 